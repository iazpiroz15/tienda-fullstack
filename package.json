{
  "name": "tienda-fullstack",
  "private": true,
  "scripts": {
    "install-all": "npm --prefix backend install && npm --prefix frontend install",
    "seed": "node backend/seed.js",
    "backend": "npm --prefix backend start",
    "frontend": "npm --prefix frontend run dev",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev": "npm run seed && npm run start"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "jsonwebtoken": "^9.0.2"
  }
}
